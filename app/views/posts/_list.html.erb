<div class="well">
  <div class="media">
    <% @posts.each_with_index do |post, index| %>
      <div class="media-body">
        <h4 class="media-heading"><%= link_to post.title, post_path(post.id) %></h4><hr>
        <p class="text-right"><%= post.short_description.html_safe %> </p>
        <p><%= post.description.html_safe %></p>
        <ul class="list-inline list-unstyled">
          <li><span><i class="glyphicon glyphicon-calendar"></i> <%= post.created_at.strftime('%d %B %Y') %> </span></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>